<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--new style is created here-->
    <style name="AppTheme.BrScan.FontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sniglet_regular</item>
    </style>

    <style name="AppTheme.BrScan.Buttons" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sniglet_regular</item>
    </style>

    <style name="AppTheme.BrScan.SignInButtons" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_sign_in_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sniglet_regular</item>
    </style>

    <style name="DashboardButtons">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/dashboard_btn_bg</item>
        <item name="android:textColor">@drawable/dashboard_btn_text</item>
    </style>

    <style name="AppTheme.BrScan.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily">@font/sniglet_regular</item>
    </style>

    <style name="AppTheme.BrScan.SubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily">@font/sniglet_regular</item>
    </style>

    <style name="AppTheme.BrScan.Details" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/softGray</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:padding">@dimen/padding_5dp</item>
        <item name="fontFamily">@font/sniglet_regular</item>
    </style>

    <style name="AppTheme.BrScan.Input" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/signUpColor</item>
        <item name="hintTextColor">@color/color_dark_gray</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/sniglet_regular</item>
    </style>
</resources>